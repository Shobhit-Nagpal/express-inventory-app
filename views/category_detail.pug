extends layout

block content
    h1 Category: #{category.name}

    p #{category.description}

    div(style='margin-left:20px;margin-top:20px')
        h4 Items under category

        ul
            each item in items_in_category
                li
                    a(href=item.url) #{item.name}

            else
                p There are items in this category

    br
    br

    p
        a(href=category.url+'/delete') Delete category
    p
        a(href=category.url+'/update') Update category
