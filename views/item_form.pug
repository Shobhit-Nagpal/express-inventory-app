extends layout

block content
    h1= title

    form(method='POST'  action='')
        div.form-group
            label(for='name') Name:
            input#name.form-control(type='text' placeholder='Name of item' name='name' required='true' value=(undefined === item ? '' : item.name) )
        div.form-group
            label(for='description') Description:
            textarea#description.form-control(type='textarea' placeholder='Description of item' name='description' required='true') #{undefined === item ? '' : item.description}
        div.form-group
            label(for='price') Price (in $):
            input#price.form-control(type='number' placeholder='420' name='price' required='true' value=(undefined === item ? '' : item.price) )
        div.form-group
            label(for='stock') In stock:
            input#stock.form-control(type='number' placeholder='69' name='stock' required='true' value=(undefined === item ? '' : item.number_in_stock) )
        div.form-group
            label Category:
            div
                for category in categories
                        div(style='display:inline; padding-right:10px;')
                            input.checkbox-input(type='checkbox' name='category' id=category._id value=category._id checked=category.checked)
                            label(for=category._id) #{category.name}
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
