extends layout

block content
    h1 Delete #{item.name}

    h4 Details

    p #[strong Description:] #{item.description}
    p #[strong Price:] $#{item.price}
    p #[strong In stock:] #{item.number_in_stock}
    p #[strong Category:]
    each val, index in item.category
        a(href=val.url) #{val.name}
        if index < item.category.length - 1
            |,
    br
    br

    p Are you sure you want to delete this item?

    form(method="POST" action="")
        div.form-group
            input#itemid.form-control(type="hidden", name="itemid", required="true", value=item._id)
        button.btn.btn-primary(type="submit") Delete
